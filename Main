package verbison.aiden.first_Minecraft;

import org.bukkit.Bukkit;
import org.bukkit.event.player.PlayerJoinEvent;
import org.bukkit.plugin.java.JavaPlugin;

public final class First_Minecraft extends JavaPlugin {

    @Override
    public void onEnable() {
        // Plugin startup logic
        Bukkit.getPluginManager().registerEvents(new PlayerJoinEventListener(), this);
        Bukkit.getPluginManager().registerEvents(new SilkTouchSpawnerBlock(), this);
    }

    @Override
    public void onDisable() {
        // Cancel all scheduled tasks
        Bukkit.getScheduler().cancelTasks(this);

        // Save any plugin configuration changes
        saveConfig();

        // Log shutdown
        getLogger().info("First_Minecraft plugin has been disabled!");
    }

}

